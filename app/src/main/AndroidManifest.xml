<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hello.hopecommunity">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/hope_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/hope_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="3PQqfSI4N5jj4QQKoovZHz6f9jlg7Ro6" />

        <activity
            android:name=".activity.DetailsActivity"
            android:label="活动详情" />
        <activity
            android:name=".activity.UpdatePasswordActivity"
            android:label="密码修改" />
        <activity
            android:name=".activity.UpdatePhoneActivity"
            android:label="手机修改" />
        <activity
            android:name=".activity.UpdateInfoActivity"
            android:label="信息修改" />
        <activity android:name=".activity.MyActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="登录" />
        <activity
            android:name=".activity.PersonalActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".activity.ReleaseActivity"
            android:label="活动发起" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 百度地图 间隔定位必须配置此service否则功能无效 -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
    </application>

</manifest>